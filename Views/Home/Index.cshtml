@{
    ViewData["Title"] = "Bem-vindo - Agenda de Contatos";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2 text-center">
            <h1 class="display-5">Agenda de Contatos</h1>
            <p class="lead">Um sistema simples para gerenciar contatos e grupos — rápido e prático.</p>

            <p>
                <a class="btn btn-primary btn-lg" href="@Url.Action("LoginView", "Usuario")">Entrar</a>
                <a class="btn btn-outline-secondary btn-lg" href="@Url.Action("CadastroView", "Usuario")">Cadastrar</a>
            </p>

            <hr />

            <h4>Recursos</h4>
            <ul class="text-start">
                <li>Crie e edite contatos</li>
